@page
@model SupermarketWEB.Pages.Account.RegisterModel
@await Html.PartialAsync("_ValidationScriptsPartial")
@{
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script src="https://cdn.jsdelivr.net/jquery.validation/1.16.0/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/jquery.validation/1.16.0/additional-methods.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>

}

<style>
    body {
        background-image: url('https://img.freepik.com/vector-gratis/fondo-geometrico-abstracto-diseno-poli_1048-8354.jpg?w=740&t=st=1700592028~exp=1700592628~hmac=203b7a29b0ddd2e8091577648c4e0cb4133e021f266a13158dcdd4abb110d14f');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        margin: 0;
        padding: 0;
        font-family: Arial, sans-serif; /* Establece la fuente según tus preferencias */
    }

    .formulario {
        max-width: 300px;
        margin: auto;
        padding: 15px;
        border: 1px solid #ddd;
        border-radius: 5px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        background-color: rgba(255, 255, 255, 0.8); /* Fondo semitransparente para mejorar la legibilidad */
    }

    .form-label {
        font-weight: bold;
    }

    .btn-container{
        margin-top: 10px;
        width: 100%;
        text-align: center;
    }

     .logo-container {
        text-align: center;
     }

     .logo {
        max-width: 50%;
        width: 100%; /* Hace que la imagen ocupe todo el ancho del contenedor */
        margin: 0 auto; /* Centra la imagen horizontalmente */
     }

    .btn-primary {
        background-color: #007bff;
        color: #fff;
    }
</style>

    <!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registro de Usuario</title>
    <link rel="stylesheet" href="styles.css">
</head>
<body>
    <form method="post" class="formulario">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="mb-3">
            <label for="InputEmail" class="form-label">Correo electrónico</label>
            <input type="email" class="form-control" asp-for="Input.Email" id="InputEmail" aria-describedby="emailHelp" />
            <div>
                <span class="text-danger" asp-validation-for="Input.Email"></span>
            </div>
        </div>
        <div class="mb-3">
            <label for="InputPassword" class="form-label">Contraseña</label>
            <input type="password" class="form-control" asp-for="Input.Password" id="InputPassword" />
            <div>
                <span class="text-danger" asp-validation-for="Input.Password"></span>
            </div>
        </div>
        <div class="mb-3">
            <label for="ConfirmPassword" class="form-label">Confirmar Contraseña</label>
            <input type="password" class="form-control" asp-for="Input.ConfirmPassword" id="ConfirmPassword" />
            <div>
                <span class="text-danger" asp-validation-for="Input.ConfirmPassword"></span>
            </div>
        </div>
        <div class="btn-container">
        <button type="submit" class="btn btn-primary">Registrarse</button>
        <p class="mt-3">¿Ya tienes una cuenta? <a asp-page="/Account/Loginn">Iniciar Sesión</a></p>
        </div>
    </form>
    
</body>
</html>
