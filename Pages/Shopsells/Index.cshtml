@page
@model SupermarketWEB.Pages.Shopsells.IndexModel
@{
    ViewData["Title"] = "Buys and Sells";
}
<h1>Buys and Sells</h1>

<p>
    <a asp-page="Create" class="btn btn-success">Buys</a>
    <a asp-page="Create" class="btn btn-success">Sells</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Shopsells[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Shopsells[0].Description)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Shopsells)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    <a asp-page="./Edidi" asp-route-id="@item.Id" class="btn btn-warning">Edit</a>
                    <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
