@page
@model SupermarketWEB.Pages.Compras.IndexModel
@{
    ViewData["Title"] = "Index Buy and Sell";
}
<h1>Index Buy and Sell</h1>
<p>
    <a asp-page="Create" class="btn btn-success">BUY STOCK</a>
    <a asp-page="Create2" class="btn btn-success">BUY SHOP</a>
</p>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Compras[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Compras[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Compras[0].Amount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Compras[0].Description)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Compras)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Amount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-danger">Sell</a>
                    <a asp-page="./Edits" asp-route-id="@item.Id" class="btn btn-danger">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>

